<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".soru_bankasi_alan_secimi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ogrencia"
        android:orientation="vertical">

        <Button
            android:id="@+id/genel_yetenek"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/buttonshape"
            android:text="genel yetenek" />

        <Button
            android:id="@+id/genel_kultur"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttonshape"
            android:text="genel kültür" />

        <Button
            android:id="@+id/egitim_bilimleri"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttonshape"
            android:text="eğitim bilimleri" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>